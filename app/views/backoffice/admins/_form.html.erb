
<h1 class="page-header">Administrador</h1>
<div class="col-lg-12">
  <% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

      <div id="error_explanation">
        <ul>
          <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= action %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-6">
          <%= form_for ([:backoffice, @admin]) do |f| %>
            <div class="form-group">
              <label>Nome</label>
              <%= f.text_field :name, class:"form-control", placeholder:"Ex.: Nome do Administrador" %>
            </div>
            <div class="form-group">
              <label>E-mail</label>
              <%= f.text_field :email, class:"form-control", placeholder:"Ex.: seu_nome@email.com" %>
            </div>
            <div class="form-group">
              <label>Tipo de Acesso</label>
              <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                <div class="radio">
                    <%= b.label { b.radio_button + b.text } %>
                </div>  
              <% end %>
            </div>
            <div class="form-group">
              <label>Senha</label>
              <%= f.password_field :password, class:"form-control", placeholder:"Ex.: Senha" %>
            </div>
            <div class="form-group">
              <label>Confirmar Senha</label>
              <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Ex.: Confirmar Senha" %>
            </div>
              <%= f.submit "Enviar", class:"btn btn-primary" %>
              <%= link_to "Voltar", backoffice_admins_path, class:"btn btn-default" %>
          <% end %>
        </div>
        <!-- /.col-lg-6 (nested) -->
      </div>
      <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
  </div>
</div>

